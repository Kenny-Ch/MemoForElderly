page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  width: 87%;
	color: rgba(0, 2, 2, 1);
	font-size: 47rpx;
	line-height: 150%;
	text-align: left;
  font-weight: bold;
  margin-top: 24rpx;
}
.list-item{
  width:87%;
  height:154rpx;
  margin-bottom: 36rpx;
}
.rtitle{
  width: 440rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: left;
}
.time{
  width: 440rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: left;
}
.wx-switch-input{
  width:102rpx !important;
  height:51rpx !important;
}
.wx-switch-input::before{
  width:102rpx !important;
  height:51rpx !important;
}
.wx-switch-input::after{
  width: 51rpx !important;
  height: 51rpx !important;
}
.jia{
  width: 107rpx;
	height: 107rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(255, 255, 255, 1);
	border-radius: 54rpx;
	font-size: 28rpx;
	line-height: 150%;
	box-shadow: 0rpx 2rpx 33rpx 0rpx rgba(0, 0, 0, 0.3);
  text-align: center;
  position: fixed;
  right: 64rpx;
  bottom: 64rpx;
  z-index: 50;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.pic{
  width: 80rpx;
	height: 80rpx;
	font-size: 80rpx;
	color: rgba(56, 56, 56, 1);
}