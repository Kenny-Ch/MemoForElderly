/* miniprogram/pages/test/test.wxss */
.content1{
  width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-scroll{
  width: 600rpx;
  height: 50px;
  line-height: 50px;
}
.content-scroll-text{
  position: absolute;
  left: 0px;
  width: 600rpx;
  background: #ece7e7;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: 0.5s;
  margin-left: 64rpx;
}
.content-scroll-bt{
  position: absolute;
  left:calc(100% - 0px);
  text-align: center;
  color: #ffffff;
  letter-spacing: 2px;
  margin-left: 64rpx;
}
.content-scroll-bt-shanchu{
  height: 50px;
  background: #ff6000;
  color:#ffffff;
}